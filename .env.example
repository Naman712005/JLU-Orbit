# Server Configuration
PORT=4000
NODE_ENV=production

# Database (REQUIRED)
MONGO_URI=your_mongodb_atlas_connection_string

# Authentication (REQUIRED)
JWT_SECRET=your_super_long_random_secret_key_minimum_64_characters

# Email Configuration for OTP (REQUIRED)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Cloudinary Configuration (REQUIRED for production on Render/Railway)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Deployment URLs (OPTIONAL - auto-detected on Render)
# Leave empty for first deployment, Render will auto-detect
FRONTEND_URL=
API_BASE=

# Email Server (OPTIONAL - defaults work for Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
